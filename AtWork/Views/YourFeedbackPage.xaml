                                                </DataTrigger>
                                            </Label.Triggers>
                                        </Label>
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={x:Reference flexView}, Path=BindingContext.SelectedTextCommand}" CommandParameter="{Binding .}" />
