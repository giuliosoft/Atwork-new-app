<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtWork.Views.LoginPage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true" Padding="{StaticResource SafeAreaPadding}"
             xmlns:Multilingual="clr-namespace:AtWork.Multilingual"
             xmlns:CustomControl="clr-namespace:AtWork.CustomControls;assembly=AtWork"
             NavigationPage.HasNavigationBar="false"
             ControlTemplate="{StaticResource Header_Template}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <Image x:Name="logoImage" Source="logo" WidthRequest="200" Margin="0,55,0,0"/>
            <StackLayout VerticalOptions="CenterAndExpand" Padding="30,0,0,0" >
                <CustomControl:CustomEntry Placeholder="Email address or ID" Keyboard="Default" FontSize="25" IsBorderLess="True" PlaceholderColor="Black" Text="{Binding UserEmail}" >
                </CustomControl:CustomEntry>
                <CustomControl:CustomEntry Placeholder="Password" FontSize="25" Keyboard="Default" IsPassword="True" IsBorderLess="True" PlaceholderColor="Black" Text="{Binding UserPassword}">
                </CustomControl:CustomEntry>
                <StackLayout VerticalOptions="Start">
                    <Label Text="{x:Static Multilingual:AppResources.ForgotPasswordText}" Padding="5,0,0,0" TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ForgotPassword}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </StackLayout>
            <StackLayout VerticalOptions="Start" Padding="0,0,0,50">
                    <Frame HasShadow="False" CornerRadius="35" HorizontalOptions="Center" VerticalOptions="End"  WidthRequest="250" HeightRequest="30" Margin="20" BackgroundColor="#515AE0">
                        <Button Command="{Binding GoForLoginCommand}" FontAttributes="Bold" x:Name="btnLogin" Text="Log in to your company" WidthRequest="50" FontSize="20" TextColor="White"/>
                    </Frame>
                </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
