<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtWork.Views.CreatePasswordPage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true" Padding="{StaticResource SafeAreaPadding}"
             xmlns:CustomControl="clr-namespace:AtWork.CustomControls;assembly=AtWork"
             NavigationPage.HasNavigationBar="false"
             BackgroundColor="{StaticResource OffWhiteColor}"
             ControlTemplate="{StaticResource GreenBackHeader_Template}">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0" Padding="0" Spacing="0">
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0,220,0,0" >
                <Label Text="{Binding CreatePassowrdLabeltext}" FontSize="17" HorizontalTextAlignment="Center" />
                <CustomControl:CustomEntry x:Name="txtpassword" Text="{Binding CreatePassowrdEntrytext}" MaxLength="8" IsPassword="True" FontSize="20" IsBorderLess="True" HorizontalTextAlignment="Center" />
                <Frame HasShadow="False" IsVisible="{Binding Passwordmessage}" CornerRadius="18"  WidthRequest="240" HeightRequest="43" BackgroundColor="{StaticResource DarkBrownColor}" Margin="20,50,20,0">
                    <StackLayout Margin="0" Padding="0" Spacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                        <Label Text="Your password must include least 8 characters" FontSize="13" TextColor="White" HorizontalTextAlignment="Center"/>
                        <Label Text="At least one lowercase letter , one upercase" FontSize="13" TextColor="White" HorizontalTextAlignment="Center"/>
                        <Label Text="letter, one number and one special character." FontSize="13" TextColor="White" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </Frame>
                <Frame HasShadow="False" IsVisible="{Binding Samepasswordworning}" CornerRadius="22" WidthRequest="2" HeightRequest="10" BackgroundColor="{StaticResource DarkBrownColor}" Margin="60,30,60,0">
                    <StackLayout  Margin="0" Padding="0" Spacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Orientation="Horizontal">   
                        <Label Text="Please enter same password" TextColor="White" FontSize="13"  HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ConfiromPasswordCommand}"/>
            </StackLayout.GestureRecognizers>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
