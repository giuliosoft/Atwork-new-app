<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtWork.Views.ChangeUserPasswordPage"
             xmlns:Multilingual="clr-namespace:AtWork.Multilingual"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true" Padding="{StaticResource SafeAreaPadding}"
             xmlns:CustomControl="clr-namespace:AtWork.CustomControls;assembly=AtWork"
             NavigationPage.HasNavigationBar="false" BackgroundColor="{StaticResource OffWhiteColor}"
             ControlTemplate="{StaticResource AddNewsPostHeader_Template}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="10" Padding="20,200,20,0" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
                <Label Text="Please enter your current password" Style="{StaticResource EnterPasswordLabelStyle}"></Label>
                <CustomControl:CustomEntry x:Name="txtpassword" Text="{Binding CreatePassowrdEntrytext}" IsPassword="True" FontSize="20" IsBorderLess="True" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" Margin="0,10,0,0" />
                <BoxView HeightRequest="0.5" BackgroundColor="{StaticResource BlackColor}" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>