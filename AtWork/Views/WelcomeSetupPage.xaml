<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtWork.Views.WelcomeSetupPage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:ffImageLoading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:Multilingual="clr-namespace:AtWork.Multilingual"
             xmlns:ffTransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true" Padding="{StaticResource SafeAreaPadding}"
             BackgroundColor="{DynamicResource DarkColor}"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout BackgroundColor="{DynamicResource DarkColor}">
            <StackLayout VerticalOptions="FillAndExpand">
                <ffImageLoading:CachedImage Margin="0,50,0,0" Grid.Column="0" Source="http://app.atwork.ai/newsposts/59324_1.png" LoadingPlaceholder="loading" ErrorPlaceholder="noimage" HeightRequest="{DynamicResource HeightWidth130}" WidthRequest="{DynamicResource HeightWidth130}" HorizontalOptions="CenterAndExpand" VerticalOptions="Start">
                    <ffImageLoading:CachedImage.Transformations>
                        <ffTransformations:CircleTransformation BorderHexColor="#000000" BorderSize="10"/>
                    </ffImageLoading:CachedImage.Transformations>
                </ffImageLoading:CachedImage>
                <Label Padding="50" Text="WELCOME &#10; SETUP" FontSize="28" FontFamily="Lato_Regular" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" TextColor="White"/>
                <Label Margin="50,10,50,10" Text="{x:Static Multilingual:AppResources.WelcomeSetup1}" FontSize="18" FontFamily="Lato_Regular" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" TextColor="White"/>
                <Label Margin="50,10,50,10" Text="{x:Static Multilingual:AppResources.WelcomeSetup2}" FontSize="18" FontFamily="Lato_Regular" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" TextColor="White"/>
                <StackLayout Padding="0,50,0,50" Orientation="Horizontal"   VerticalOptions="EndAndExpand" HorizontalOptions="FillAndExpand">
                    <Frame HasShadow="False" CornerRadius="30" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  WidthRequest="{DynamicResource DeviceWidthFooterTab}" HeightRequest="20" Margin="10,10,5,10" BackgroundColor="{DynamicResource AccentColor}">
                        <Button x:Name="btnBeginSetup" Text="Begin Setup" WidthRequest="50" FontSize="20" VerticalOptions="FillAndExpand" TextColor="White"  Command="{Binding GoForCancelCommand}"/>
                    </Frame>
                    <Frame HasShadow="False" CornerRadius="30" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"  WidthRequest="{DynamicResource DeviceWidthFooterTab}" HeightRequest="20" Margin="10,10,5,10" BackgroundColor="{DynamicResource AccentColor}">
                        <Button x:Name="btnSkip" Text="Skip" WidthRequest="50" VerticalOptions="FillAndExpand" FontSize="20" TextColor="White" Command="{Binding GoForPasswordCommand}"/>
                    </Frame>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
